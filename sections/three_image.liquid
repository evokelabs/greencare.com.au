         "type": "color",
         "id": "background_color",
         "label": "Background color",
         "default": "#ffffff"
      },
     {
      "type": "image_picker",
      "id": "image1",
      "label": "Image1"
  	  },
      {
         "type": "text",
         "id": "heading1",
         "label": "Heading"
      },
      {
         "type": "textarea",
         "id": "subheading1",
         "default": "Welcome to my shop!",
         "label": "subheading"
      },
		{
      "type": "image_picker",
      "id": "image2",
      "label": "Image2"
  	  },
      {
         "type": "text",
         "id": "heading2",
         "label": "Heading"
      },
      {
         "type": "textarea",
         "id": "subheading2",
         "default": "Welcome to my shop!",
         "label": "subheading"
      },
	{
      "type": "image_picker",
      "id": "image3",
      "label": "Image3"
  	  },
      {
         "type": "text",
         "id": "heading3",
         "label": "Heading"
      },
      {
         "type": "textarea",
         "id": "subheading3",
         "default": "Welcome to my shop!",
         "label": "subheading"
      },
      {
        "id": "link",
        "type": "url",
        "label": "Button link"
      },
      {
        "id": "linktext",
        "type": "text",
        "label": "Button text",
        "default": "Click here"
      }
	],

  "presets": [
        {
			"name": "Three Image Section",
			"category": "Image"	
        }
	]
  }
