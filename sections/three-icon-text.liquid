

<div class="page-width section_full" >
  {% if section.settings.main_heading != blank %}    
    <h4 class="section_heading"> {{ section.settings.main_heading }} </h4>
    {% endif %}
      
    {% if section.settings.main_text != blank %}    
    <p class="section_para"> {{ section.settings.main_text }} </p>
    {% endif %}
  
  <div class="icon_text_main">
    <div class="iconblock">
      <div class="icon_inner">
    
    {% if section.settings.image1 != blank %}    
        <div class="custom_icon"><img src="{{ section.settings.image1 | img_url: ' ' }}"  alt="image1" > </div>  
    {% endif %}
    
    {% if section.settings.heading1 != blank %}    
    <h2> {{ section.settings.heading1 }} </h2>
    {% endif %}
    
    {% if section.settings.subheading1 != blank %}    
    <h4> {{ section.settings.subheading1 }} </h4>
    {% endif %}
      
    {% if section.settings.subtext1 != blank %}    
    <p> {{ section.settings.subtext1 }} </p>
    {% endif %}
      
    {% if section.settings.btn_url1 != blank %}    
            <div class="button_full">
              <a href="{{ section.settings.btn_url1 }}"> {{ section.settings.btn1 }} </a></div>
    {% endif %}
      </div>
    
  </div>
  <div class="iconblock">
         <div class="icon_inner">
