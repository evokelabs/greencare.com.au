    {% endif %}
    {% if section.settings.doctor_left_pera_fourth != '' %}
    <p class="para_doctor">{{section.settings.doctor_left_pera_fourth }}</p>
    {% endif %}
    
    {% if section.settings.doctor_sub_heading != '' %}
    <p class="benefit_span">{{section.settings.doctor_sub_heading }}</p>
    {% endif %}
    
    {% if section.settings.doctor_list1 != '' %}
    <ul>
    {% if section.settings.doctor_list1 != '' %}
