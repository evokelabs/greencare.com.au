    {% endif %}
      
    {% if section.settings.btn_url2 != blank %}  
    <div class="button_full">
    <a href="{{ section.settings.btn_url2 }}"> {{ section.settings.btn2 }} </a>
           </div>
    {% endif %}
    </div>
    
  </div>
  <div class="iconblock">
         <div class="icon_inner">
    {% if section.settings.image3 != blank %}    
