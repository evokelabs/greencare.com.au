    {% endif %}
    {% if section.settings.doctor_list6 != '' %}
    <li>{{section.settings.doctor_list6 }}</li>
    {% endif %}
    {% if section.settings.doctor_list7 != '' %}
    <li>{{section.settings.doctor_list7 }}</li>
    {% endif %}
    {% if section.settings.doctor_list8 != '' %}
    <li>{{section.settings.doctor_list8 }}</li>
    {% endif %}
    </ul>
    {% endif %}
      
    {% if section.settings.doctor_button_link_fourth != '' %}
    <div class="threeimagesec_btn">
      <a href="{{section.settings.doctor_button_link_fourth}}" class="btn btn--cta">{{section.settings.doctor_left_pera_button_fourth}}</a>
    </div>
    {% endif %}
    
  </div>
  
  {% if section.settings.doctor_banner_right_image_fourth != '' %}
  <div class="doctor_image_section">
    <img src="{{section.settings.doctor_banner_right_image_fourth | img_url: 'master'}}">
  </div>
  {% endif %}
  
</div>
